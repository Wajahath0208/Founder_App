<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    android:layout_marginTop="50dp"
    tools:context=".description">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >
    <ImageView
        android:id="@+id/page_founderimage"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginVertical="10dp"

        android:src="@drawable/elon_musk_png_photo_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/page_foundername"
        />
    <TextView
        android:id="@+id/page_foundername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elon_musk"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_marginVertical="15dp"
        app:layout_constraintStart_toStartOf="@+id/page_founderimage"
        app:layout_constraintEnd_toEndOf="@+id/page_founderimage"
        app:layout_constraintTop_toBottomOf="@+id/page_founderimage"
        app:layout_constraintBottom_toTopOf="@+id/founder_company"
        />

        <TextView
            android:id="@+id/founder_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/elon_musk_company"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_foundername"
            app:layout_constraintBottom_toTopOf="@+id/text_scroll"/>
     <ScrollView
         android:id="@+id/text_scroll"
         android:layout_width="match_parent"
         android:layout_height="370dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"

         app:layout_constraintTop_toBottomOf="@+id/founder_company"
         app:layout_constraintBottom_toBottomOf="parent">
    <TextView
        android:id="@+id/founder_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elon_musk_desc"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/page_founderimage"
        app:layout_constraintEnd_toEndOf="@+id/page_founderimage"
        app:layout_constraintTop_toBottomOf="@+id/founder_company"
        android:layout_margin="15dp"
        android:padding="15dp"/>
     </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>